<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

    <changeSet id="005-create-product-variants" author="anshu">
        <createTable tableName="product_variants" schemaName="product_service">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="variant_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="stock_quantity" type="INT" defaultValueNumeric="0"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableSchemaName="product_service"
                                 baseTableName="product_variants"
                                 baseColumnNames="product_id"
                                 referencedTableSchemaName="product_service"
                                 referencedTableName="products"
                                 referencedColumnNames="id"
                                 constraintName="fk_variant_product"
                                 onDelete="CASCADE"/>

        <createIndex tableName="product_variants" indexName="idx_variant_product" schemaName="product_service">
            <column name="product_id"/>
        </createIndex>

        <createIndex tableName="product_variants" indexName="idx_variant_name" schemaName="product_service">
            <column name="variant_name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
