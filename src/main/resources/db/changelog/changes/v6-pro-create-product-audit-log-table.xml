<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">

    <changeSet id="006-create-product-audit-logs" author="anshu">
        <createTable tableName="product_audit_logs" schemaName="product_service">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_uuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <createIndex tableName="product_audit_logs" indexName="idx_audit_product_uuid" schemaName="product_service">
            <column name="product_uuid"/>
        </createIndex>

        <createIndex tableName="product_audit_logs" indexName="idx_audit_action" schemaName="product_service">
            <column name="action"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
